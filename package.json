{
  "name": "puteamatai",
  "version": "0.1.0",
  "description": "PūteaMātai - Personal finance tracking and analysis webapp",
  "main": "index.js",
  "scripts": {
    "test": "jest tests/node/",
    "test:watch": "jest --watch tests/node/",
    "lint": "eslint .",
    "fmt": "prettier --write .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "dev": "ts-node src/index.ts"
  },
  "keywords": [
    "finance",
    "aws",
    "serverless",
    "typescript",
    "personal-finance"
  ],
  "author": "Jarrod Lowe",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!node_modules/**",
      "!coverage/**",
      "!dist/**",
      "!**/*.d.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
